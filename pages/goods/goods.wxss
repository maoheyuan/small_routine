.header{
 width: 100%;
 height: 480rpx;
}

.slide-image{

  width: 100%;
  height: 100%;
  
}

.title{


  width: 100%;
  font-size: 48rpx;
  border-bottom: 1px solid #eee;
  padding: 20rpx 10rpx;
}

.price_tool{

  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 1px;
}

.cost_row ,.sale_row,.unit_row{
  padding-right: 20rpx;
}

.sale_money{
 
  font-size:48rpx;
  color: #f00;
}

.cost_row{
  color: #888;
  font-size:32rpx;
  text-decoration:line-through ;
  
}
.content{

  margin: 0rpx;
  padding: 0rpx;
}
.content_image{

  width: 100%;
  margin: 0rpx;
  padding: 0rpx;
  margin-top: -12rpx;

}


.tool{

  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left:0rpx;
  right: 0rpx; 
  background-color: #fff;
 
}
.tool_left,.tool_md,.tool_right{
 flex: 1;
  text-align: center;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.tool_left{
  text-align: center;
}
.tool_left image{
  width: 60rpx;
  height: 60rpx;
}
.tool_md{

  font-size: 32rpx;
  color: #f00;
}

.tool_right{
  background-color: #f00;
  color: #fff;
  flex: 2;
}